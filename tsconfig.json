{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "build",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "lib" : [
          "es2015"
        ]
    },
    "include": [
        "server/**/*.ts",
        "server/*.ts",
        "tests/**/*.ts",
        "tests/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true,
    "buildOnSave": true
}
